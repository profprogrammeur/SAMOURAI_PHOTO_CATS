</body>
 <div class="container">
    
    <div class="row gx-4 gy-4 mb-3">

  <% @items.each do |item| %>
              
      <div class="col-sm-3">
        <a href="<%= item_path(item.id) %>">
          <%= image_tag item.image_url, :alt => "cat image",class:"card-img ",style: "height: 300px, width:auto" %>
        </a>
        <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
          <div class="card-body">
            <h5 class="card-title"><%=item.title%></h5>
            <p class="card-text"><%=item.description%></p>
            <a href="<%= item_path(item.id) %>" class="btn btn-warning" >Voir cette photo</a>
            <i class="fas fa-cart-arrow-down fa-2x"></i>
          </div>
        </div>
      </div>

  <%end%>
    
