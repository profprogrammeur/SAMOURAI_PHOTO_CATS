
 <div class="container">
    <h2 class="mb-4">Tous les chats</h2>
    <div class="row gx-4 gy-4 mb-3">

  <% @items.each do |item| %>
              
      <div class="col-sm-3">
        <a href="<%= item_path(item.id) %>">
          <%= image_tag item.image_url, :alt => "cat image",class:"card-img ",style: "height: 300px, width:auto" %>
        </a>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%=item.title%></h5>
            <p class="card-text"><%=item.description%></p>
            <a href="<%= item_path(item.id) %>" class="btn btn-primary">Acheter </a>
              <% if user_signed_in?%>
                <%= link_to cart_path(item.id), class: "color_cart", remote: true, method: "PUT" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="orange" class="bi bi-bag-fill" viewBox="0 0 16 16">
  <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5z"/>
</svg>
                <% end %>
              <% else %>
                <%= link_to new_user_session_path, class: "color_cart", method: "GET" do %>
               <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag-fill" viewBox="0 0 16 16">
  <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5z"/>
</svg>
              <% end %>
              <% end %>
          </div>
        </div>
      </div>

  <%end%>
    
